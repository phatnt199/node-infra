{
  "name": "@lb/infra",
  "private": true,
  "version": "0.0.3",
  "description": "Loopback 4 Infrastructure",
  "keywords": [
    "loopback",
    "loopback-application",
    "infrastructure"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "14 || 16 || 17 || 18"
  },
  "scripts": {
    "prebuild": "yarn lint",
    "build": "lb-tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:watch": "lb-tsc --watch",
    "lint": "yarn eslint && yarn prettier:check",
    "lint:fix": "yarn eslint --fix && yarn prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "yarn prettier:cli",
    "prettier:fix": "yarn prettier:cli --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "clean": "sh clean.sh",
    "rebuild": "yarn clean && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:phatnt199/lb-infra.git"
  },
  "author": "Phat Nguyen <tanphat199@gmail.com>",
  "license": "ISC",
  "files": [
    "README_DEV.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@loopback/authentication": "^9.0.9",
    "@loopback/authentication-jwt": "^0.12.9",
    "@loopback/authentication-passport": "^5.0.9",
    "@loopback/authorization": "^0.12.9",
    "@loopback/boot": "^5.0.8",
    "@loopback/core": "^4.0.8",
    "@loopback/http-server": "^4.0.9",
    "@loopback/repository": "^5.1.3",
    "@loopback/rest": "^12.0.8",
    "@loopback/rest-crud": "^0.15.7",
    "@loopback/rest-explorer": "^5.0.8",
    "@loopback/service-proxy": "^5.0.8",
    "@socket.io/redis-adapter": "^8.1.0",
    "@socket.io/redis-emitter": "^5.1.0",
    "bullmq": "^3.10.1",
    "casbin": "^5.25.0",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.3",
    "dotenv-flow": "^3.2.0",
    "ioredis": "^5.2.2",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "rxjs": "^7.8.0",
    "socket.io": "^4.6.1",
    "voca": "^1.4.0",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@loopback/build": "^9.0.8",
    "@loopback/eslint-config": "^13.0.8",
    "@loopback/testlab": "^5.0.8",
    "@types/crypto-js": "^4.1.1",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.182",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.18.36",
    "@types/voca": "^1.4.2",
    "eslint": "^8.33.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.3",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.7.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "~4.9.4"
  }
}
