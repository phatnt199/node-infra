{
  "name": "@lb/infra",
  "version": "0.0.8",
  "description": "Loopback 4 Infrastructure",
  "keywords": [
    "loopback",
    "loopback-application",
    "infrastructure"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": "18 || 20"
  },
  "scripts": {
    "build": "lb-tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:watch": "lb-tsc --watch",
    "lint": "yarn eslint && yarn prettier:check",
    "lint:fix": "yarn eslint --fix && yarn prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "yarn prettier:cli",
    "prettier:fix": "yarn prettier:cli --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "clean": "sh ./scripts/clean.sh",
    "rebuild:major": "sh ./scripts/rebuild.sh --major",
    "rebuild:minor": "sh ./scripts/rebuild.sh --minor",
    "rebuild:patch": "sh ./scripts/rebuild.sh --patch",
    "rebuild:no-version": "sh ./scripts/rebuild.sh --no-version"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phatnt199/lb-infra.git"
  },
  "author": "Phat Nguyen <tanphat199@gmail.com>",
  "license": "ISC",
  "files": [
    "README_DEV.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@loopback/authentication": "11.0.1",
    "@loopback/authentication-jwt": "0.15.1",
    "@loopback/authentication-passport": "7.0.1",
    "@loopback/authorization": "0.15.1",
    "@loopback/boot": "7.0.1",
    "@loopback/core": "6.0.1",
    "@loopback/http-server": "6.0.1",
    "@loopback/repository": "7.0.1",
    "@loopback/rest": "14.0.1",
    "@loopback/rest-crud": "0.18.1",
    "@loopback/rest-explorer": "7.0.1",
    "@loopback/service-proxy": "7.0.1",
    "@socket.io/redis-adapter": "8.3.0",
    "@socket.io/redis-emitter": "^5.1.0",
    "axios": "1.6.8",
    "bullmq": "5.7.8",
    "casbin": "5.30.0",
    "cron": "3.1.7",
    "crypto-js": "^4.1.1",
    "dayjs": "1.11.11",
    "dotenv-flow": "4.1.0",
    "ioredis": "5.4.1",
    "jsonwebtoken": "^9.0.0",
    "knex": "^3.1.0",
    "minio": "7.1.1",
    "mqtt": "5.5.0",
    "multer": "^1.4.5-lts.1",
    "rxjs": "^7.8.0",
    "socket.io": "4.7.5",
    "socket.io-client": "4.7.5",
    "voca": "^1.4.0",
    "winston": "3.13.0",
    "winston-daily-rotate-file": "5.0.0"
  },
  "devDependencies": {
    "@loopback/build": "11.0.1",
    "@loopback/eslint-config": "15.0.1",
    "@loopback/testlab": "7.0.1",
    "@types/axios": "^0.14.0",
    "@types/cron": "^2.0.1",
    "@types/crypto-js": "4.2.2",
    "@types/jsonwebtoken": "9.0.6",
    "@types/lodash": "4.17.0",
    "@types/multer": "^1.4.7",
    "@types/node": "20.12.5",
    "@types/voca": "^1.4.2",
    "eslint": "9.0.0",
    "eslint-plugin-prettier": "5.1.3",
    "prettier": "3.2.5",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.7",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.4.4"
  },
  "bugs": {
    "url": "https://github.com/phatnt199/lb-infra/issues"
  },
  "homepage": "https://github.com/phatnt199/lb-infra#readme"
}
